# Anthropic API Key (required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=''

# OpenAI API Key (required for audio transcription)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=''

# API Password Protection (required)
# Set a secure password for your transcript processing API
TRANSCRIPT_API_PASSWORD='your_secure_password_here'

# Git Configuration (optional, defaults provided)
GIT_USER_NAME='Claude Code Bot'
GIT_USER_EMAIL='claude-code@anthropic.com'

# Image APIs (optional but recommended)
# Free tier: 50 requests/hour
# Get your key at: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=''

# Pexels API - Fallback for images (optional)
# Free tier: 200 requests/hour
# Get your key at: https://www.pexels.com/api/
PEXELS_API_KEY=''

# Site Password Protection (optional)
# Enable password protection for the entire website
SITE_PASSWORD_ENABLED='false'
# Set a password that visitors must enter to access the site
SITE_PASSWORD='your_site_password_here'

# GitHub API Configuration (for Vercel deployment)
GITHUB_TOKEN='your_github_personal_access_token'
GITHUB_OWNER='your_github_username'
GITHUB_REPO='your_repo_name'
GITHUB_BRANCH='main'
